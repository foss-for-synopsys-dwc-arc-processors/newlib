DESTDIR =
VPATH = @srcdir@ @srcdir@/.. @srcdir@/../..
srcdir = @srcdir@
objdir = .
srcroot = $(srcdir)/../../..
objroot = $(objdir)/../../..
mkinstalldirs = $(SHELL) $(srcroot)/mkinstalldirs

prefix = @prefix@
exec_prefix = @exec_prefix@

host_alias = @host_alias@
target_alias = @target_alias@

bindir = @bindir@
libdir = @libdir@
tooldir = $(exec_prefix)/$(target_alias)

objtype = @objtype@

INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

# Multilib support variables.
# TOP is used instead of MULTI{BUILD,SRC}TOP.
MULTIDIRS =
MULTISUBDIR =
MULTIDO = true
MULTICLEAN = true

SHELL =	/bin/sh

CC = @CC@

AS = @AS@
AR = @AR@
LD = @LD@
RANLIB = @RANLIB@

HL_OBJS = \
	hl_gw.o \
	hl_api.o \
	hl_open.o \
	hl_close.o \
	hl_read.o \
	hl_write.o \
	hl_lseek.o \
	hl_unlink.o \
	hl_isatty.o \
	hl_fstat.o \
	hl_clock.o \
	hl_gettimeofday.o \
	hl_argc.o \
	hl_argv.o \
	hl_exit.o

override CFLAGS += -I${srcdir}

# Host specific makefile fragment comes in here.
@host_makefile_frag@

hl_gw.o: hl_gw.c
hl_api.o: hl_api.c
hl_open.o: hl_open.c
hl_close.o: hl_close.c
hl_read.o: hl_read.c
hl_write.o: hl_write.c
hl_lseek.o: hl_lseek.c
hl_unlink.o: hl_unlink.c
hl_isatty.o: hl_isatty.c
hl_fstat.o: hl_fstat.c
hl_clock.o: hl_clock.c
hl_gettimeofday.o: hl_gettimeofday.c
hl_argc.o: hl_argc.c
hl_argv.o: hl_argv.c
hl_exit.o: hl_exit.c

.PHONY: all
all: $(HL_OBJS)

clean mostlyclean:
	rm -f *.o *.a

distclean maintainer-clean realclean: clean
	rm -f Makefile *~

Makefile: Makefile.in ../config.status @host_makefile_frag_path@
	$(SHELL) ../config.status --file hl/Makefile

../config.status: ../configure
	$(SHELL) ../config.status --recheck
